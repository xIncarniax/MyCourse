<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiCalendar.BenchPressPage"
             Title="Жим лёжа">
    <ScrollView>
        <StackLayout>
            <Image Source="bench_press.png"
                       HorizontalOptions="Center"
                       WidthRequest="300"
                       HeightRequest="300"
                       Margin="0,10,0,0"/>
            <Label Text="Целевые мышцы"
                       HorizontalTextAlignment="Center"
                       FontAttributes="Bold"
                       BackgroundColor="AliceBlue"/>
            <Label Text="Грудь"
                       HorizontalTextAlignment="Center"/>
            <Label Text="Вспомогательные мышцы"
                       HorizontalTextAlignment="Center"
                       FontAttributes="Bold"
                       Margin="0,20,0,0"
                       BackgroundColor="AliceBlue"/>
            <Label Text="Плечи"
                       HorizontalTextAlignment="Center"/>
            <Label Text="Тип"
                       HorizontalTextAlignment="Center"
                       FontAttributes="Bold"
                       Margin="0,20,0,0"
                       BackgroundColor="AliceBlue"/>
            <Label Text="Базовое"
                       HorizontalTextAlignment="Center"/>
            <Label Text="Видео"
                       HorizontalTextAlignment="Center"
                       FontAttributes="Bold"
                       Margin="0,20,0,0"
                       BackgroundColor="AliceBlue"/>
            <Image x:Name="videoPreview"
                       Source="chest_1.jpeg"
                       HeightRequest="150"
                       WidthRequest="250">
                <Image.GestureRecognizers>
                    <TapGestureRecognizer Tapped="VideoPreviewTapped"/>
                </Image.GestureRecognizers>
            </Image>
        </StackLayout>
    </ScrollView>
</ContentPage>